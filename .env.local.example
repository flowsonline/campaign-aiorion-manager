# OpenAI API Key (for content generation & TTS)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Shotstack API Key (for video/image rendering)
# Get it from: https://dashboard.shotstack.io/
SHOTSTACK_API_KEY=your-shotstack-key-here

# Shotstack Environment (use 'stage' for testing, 'v1' for production)
SHOTSTACK_ENV=stage

# Base URL for your deployed app (for webhooks)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
