{
  "timeline": {
    "soundtrack": {
      "src": "{{audioUrl}}",
      "effect": "fadeInFadeOut"
    },
    "background": "{{paletteColor}}",
    "tracks": [
      {
        "clips": [
          {
            "asset": {
              "type": "image",
              "src": "{{logoUrl}}"
            },
            "start": 0,
            "length": 6,
            "fit": "contain",
            "scale": 0.22,
            "position": "top",
            "offset": {
              "y": 0.3
            },
            "transition": {
              "in": "zoom",
              "out": "fade"
            }
          }
        ]
      },
      {
        "clips": [
          {
            "asset": {
              "type": "html",
              "html": "<div style='width: 900px; height: 1600px; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; padding: 60px;'><h1 style='font-family: Arial, sans-serif; font-size: 88px; font-weight: bold; color: white; text-shadow: 2px 2px 8px rgba(0,0,0,0.5); margin: 0; line-height: 1.15; letter-spacing: -2px;'>{{headline}}</h1></div>",
              "css": "body { margin: 0; }",
              "width": 1080,
              "height": 1920
            },
            "start": 0,
            "length": 6,
            "transition": {
              "in": "fade",
              "out": "fade"
            }
          }
        ]
      },
      {
        "clips": [
          {
            "asset": {
              "type": "html",
              "html": "<div style='width: 850px; padding: 40px; text-align: center; background: linear-gradient(135deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2)); border-radius: 25px; backdrop-filter: blur(10px);'><p style='font-family: Arial, sans-serif; font-size: 38px; color: white; margin: 0; line-height: 1.4;'>{{caption}}</p></div>",
              "css": "body { margin: 0; }",
              "width": 1080,
              "height": 350
            },
            "start": 0.5,
            "length": 5.5,
            "position": "bottom",
            "offset": {
              "y": -0.18
            },
            "transition": {
              "in": "slideUp",
              "out": "fade"
            }
          }
        ]
      }
    ]
  },
  "output": {
    "format": "mp4",
    "resolution": "1080",
    "aspectRatio": "9:16",
    "size": {
      "width": 1080,
      "height": 1920
    },
    "fps": 30,
    "quality": "high"
  }
}
