{
  "timeline": {
    "soundtrack": {
      "src": "{{audioUrl}}",
      "effect": "fadeInFadeOut"
    },
    "background": "{{paletteColor}}",
    "tracks": [
      {
        "clips": [
          {
            "asset": {
              "type": "image",
              "src": "{{logoUrl}}"
            },
            "start": 0,
            "length": 8,
            "fit": "contain",
            "scale": 0.25,
            "position": "top",
            "offset": {
              "y": 0.25
            },
            "transition": {
              "in": "slideDown",
              "out": "fade"
            }
          }
        ]
      },
      {
        "clips": [
          {
            "asset": {
              "type": "html",
              "html": "<div style='width: 900px; height: 1600px; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; padding: 80px 60px;'><h1 style='font-family: Arial, sans-serif; font-size: 96px; font-weight: bold; color: white; text-shadow: 3px 3px 10px rgba(0,0,0,0.4); margin: 0; line-height: 1.1;'>{{headline}}</h1></div>",
              "css": "body { margin: 0; }",
              "width": 1080,
              "height": 1920
            },
            "start": 0,
            "length": 8,
            "transition": {
              "in": "fade",
              "out": "fade"
            }
          }
        ]
      },
      {
        "clips": [
          {
            "asset": {
              "type": "html",
              "html": "<div style='width: 900px; padding: 50px; text-align: center; background: rgba(0,0,0,0.3); border-radius: 20px;'><p style='font-family: Arial, sans-serif; font-size: 42px; color: white; margin: 0;'>{{caption}}</p></div>",
              "css": "body { margin: 0; }",
              "width": 1080,
              "height": 300
            },
            "start": 1,
            "length": 7,
            "position": "bottom",
            "offset": {
              "y": -0.2
            },
            "transition": {
              "in": "slideUp",
              "out": "fade"
            }
          }
        ]
      }
    ]
  },
  "output": {
    "format": "mp4",
    "resolution": "1080",
    "aspectRatio": "9:16",
    "size": {
      "width": 1080,
      "height": 1920
    },
    "fps": 30,
    "quality": "high"
  }
}
